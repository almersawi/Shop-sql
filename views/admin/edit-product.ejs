<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>

   <div class="container">
         <main>
        <form action="/admin/<% if (editing) { %>edit-product<%} else {%>add-product<%}%>" method="POST" class="form-gradient mb-5">
            <div class="card">
                <div class="header blue-gradient">
                    <div class="row d-flex justify-content-center">
                        <h3 class="white-text mb-0 py-5 font-weight-bold">Add product</h3>
                    </div>
                </div>
                <div class="card-body mx-4">
                
            <div class="md-form md-outline">
                <i class="fas fa-heading prefix"></i>
                <label for="title">Product title</label>
                <input type="text" name="title" id="title" class="form-control" value="<%if(editing){%><%=product.title%><%}%>" required>
            </div>
            <div class="md-form md-outline">
                <i class="fas fa-images prefix"></i>
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" class="form-control" value="<%if(editing){%><%=product.imageUrl%><%}%>" required>
            </div>
            <div class="md-form md-outline">
                <i class="fas fa-dollar-sign prefix"></i>
                <label for="price">Product Price</label>
                <input type="number" step="0.01" name="price" id="price" class="form-control" value="<%if(editing){%><%=product.price%><%}%>" required>
            </div>
            <div class="md-form md-outline">
                <i class="fas fa-file-alt prefix"></i>
                <label for="description">Product Description</label>
                <textarea rows="5" name="description" id="description" class="md-textarea form-input" required><%if(editing){%><%=product.description%><%}%></textarea>
            </div>

            <%if (editing) {%>

                <input type="hidden" name="prodId" value="<%= product.id%>">

            <%}%>
            
           <div class="text-center">
            <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane prefix"></i>  <% if (editing) { %>Update Product <%} else {%> Add Product <%}%></button>
           </div>
        </div>
        </form>
    </main> 
    </div>
   </div>

<%- include('../includes/end.ejs') %>